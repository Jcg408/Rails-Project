
<!-- These form fields have built in validations. I have also included field with errors. -->

<div class = 'appt'>
  <%= form_for @appointment do |f| %>   
 
        <% if @appointment.errors.any? %>
            <div id="error_explanation">
            <h2>Errors:</h2>

            <ul>
                <% @appointment.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <%end%>
            </ul>
            </div>
        <%end%>   
    <%= f.label :date, "Appointment Date" %>    
    <%= f.date_field :date, min: Date.today%> <br> 
    <%= f.label :time, "Appointment Time" %>
    <%= f.time_field :time%> <br>    
    
    <%= f.label :staff, "Staff Name" %>
    <%= f.collection_select :staff_id, Staff.all, :id, :name %> <br> 
    
    <%= f.label :service, "Spa Service" %>
    <%= f.collection_select :service_id, Service.all, :id, :name %> <br> 
    <%= f.submit 'Submit', class: 'submit'%>      
        
    <%end%> 
</div>


     
 
  