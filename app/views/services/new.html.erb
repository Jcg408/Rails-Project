   <!-- services & staff form -->
   <%= form_for new_staff_service_path do |f| %>
   
  <%= f.label :staff, "Staff Name" %>
  <%= f.collection_select :staff, Staff.all, :id, :name %> <br> 

  <%= f.label :service, "Spa Service" %>
  <%= f.collection_select :service, Service.all, :id, :name %> <br> 

  <%= f.fields_for :appointment do |f| %>
    <%= f.label :email, "Email" %>
    <%= f.text_field :email %>

    <%= f.label :password, "Password" %>
    <%= f.text_field :password %>
  <%end%>
  <%end%>
  <%= f.submit %>
  